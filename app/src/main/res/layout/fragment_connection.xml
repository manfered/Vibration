<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/tileHalfMargin"
                android:layout_marginLeft="@dimen/tileMargin"
                android:layout_marginRight="@dimen/tileHalfMargin"
                android:layout_marginTop="@dimen/tileMargin"
                android:layout_weight="1"
                android:background="@drawable/menu_list_item_1_layout"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/linearLayoutConnectionAndroidBeacon">

                <ImageView
                    android:id="@+id/imageViewConnectionAndroidBeacon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/beacon192" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menuListItemMargin"
                    android:gravity="center"
                    android:text="@string/menuConnectionAndroidBeacon"
                    android:textColor="@color/menuListItemColor"
                    android:textSize="21sp"
                    android:id="@+id/textViewConnectionAndroidBeacon"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/tileHalfMargin"
                android:layout_marginLeft="@dimen/tileHalfMargin"
                android:layout_marginRight="@dimen/tileMargin"
                android:layout_marginTop="@dimen/tileMargin"
                android:layout_weight="1"
                android:background="@drawable/menu_list_item_3_layout"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/linearLayoutConnectionAndroidReceiver">

                <ImageView
                    android:id="@+id/imageViewConnectionAndroidReceiver"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/receiver192" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menuListItemMargin"
                    android:gravity="center"
                    android:text="@string/menuConnectionAndroidReceiver"
                    android:textColor="@color/menuListItemColor"
                    android:textSize="21sp"
                    android:id="@+id/textViewConnectionAndroidReceiver"/>


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/tileMargin"
                android:layout_marginLeft="@dimen/tileMargin"
                android:layout_marginRight="@dimen/tileMargin"
                android:layout_marginTop="@dimen/tileHalfMargin"
                android:layout_weight="1"
                android:background="@drawable/menu_list_item_2_layout"
                android:elevation="@dimen/elevation"
                android:gravity="center"
                android:orientation="vertical"
                android:clickable="true"
                android:id="@+id/linearLayoutConnectionPCBeacon">

                <ImageView
                    android:id="@+id/imageViewConnectionPCBeacon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/pcbeacon192" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/menuListItemMargin"
                    android:gravity="center"
                    android:text="@string/MenuConnectionPCBeacon"
                    android:textColor="@color/menuListItemColor"
                    android:textSize="21sp"
                    android:id="@+id/textViewConnectionPCReceiver"/>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
